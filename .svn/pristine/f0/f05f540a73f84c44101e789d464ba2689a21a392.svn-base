{js:artTemplate} {js:areaSelect} {js:my97date}
<div id="pageInfo" data-title="餐厅信息"></div>

<!-- onsubmit="return regActCheck();" -->
<div id="main" class="zhucemain" >
	<form  action='{url:/simple/regAct}' method='post'  enctype="multipart/form-data" onsubmit="return regCheck();">
		<input type="hidden" name='callback' value="{$callback}" />
		<input type="hidden" name="goto" vlaue="1">
		<ul class="cheinfo">
			<li>
				<label>餐厅名称</label>
				<input type="text" name="seller_name" id="seller_name">
			</li>
			<li>
				<label>负责人</label>
				<input type="text" name="person_charge"  id="person_charge">
			</li>
			<li>
				<label>座机电话</label>
				<input type="text" name="phone">
			</li>
			<li>
				<label>手机号码</label>
				<input type="text" name="mobile" id="mobile">
			</li>					
		</ul>
		<ul class="zhenginfo">
			<li>
				<label>注册名称</label>
				<input type="text" name="true_name"  id="true_name">
			</li>
			<li>
				<label>税号</label>
				<input type="text" name="tax_number" id="tax_number">
			</li>
			<li>	
				<label>营业证照</label>
				<ul class="pic">
					<span><input type="file" name="paper_img" title="营业执照" class="pic1 imgup_show"></span>
					<span><input type="file" name="certif_img" title="卫生许可证" class="pic1 imgup_show"></span>
					<span><input type="file" name="carinfo_img" title="营业场所外部照片" class="pic1 imgup_show"></span>
				</ul>
				<p>(营业执照、卫生许可证、营业场所外部照片等)</p>
			</li>
		</ul>
		<ul class="chexinxi">
			<li class="dizhi">
				<label>餐厅地址</label>
				<select id="province" name="province" child="city,area"></select>
				<select id="city" name="city" child="area"></select>
				<select id='area' name="area"></select>
				<input type="hidden" id="cityname" name="cityname" value="">
			</li>
			<li>
				<label></label>
				<input type="text" id="address" name="address" placeholder="详细地址">
			</li>
			<li class="shijian">
				<label>营业时间</label>
				<select name="hours_start">
					<option value="08:00">08:00</option>
					<option value="08:30">08:30</option>
					<option value="09:00">09:00</option>
					<option value="09:30">09:30</option>
					<option value="10:00">10:00</option>
					<option value="10:30">10:30</option>
					<option value="11:00">11:00</option>
					<option value="11:30">11:30</option>
					<option value="12:00">12:00</option>
				</select>
				——
				<select name="hours_end">
					<option value="17:00">17:00</option>
					<option value="17:30">17:30</option>
					<option value="18:00">18:00</option>
					<option value="18:30">18:30</option>
					<option value="19:00">19:00</option>
					<option value="20:00">20:00</option>
					<option value="21:00">21:00</option>
					<option value="22:00">22:00</option>
					<option value="22:30">22:30</option>
					<option value="23:00">23:00</option>
				</select>
			</li>
		</ul>
		<p class="xieyi">
			<input type="checkbox" id="status" name="agree" checked="">我同意接受<a href="javascript:;">《特派员采购配送服务协议》</a>
		</p>
		<input class="sub" type="submit" value="提交">
	</form>
</div>
<script type="text/javascript">
//DOM加载完毕
$(function(){
	$(".footer_nav").hide();
	//初始化地域联动
	var areaInstance = new areaSelect('province');
	{if:$this->memberRow}
	{set:$area = explode(',',trim($this->memberRow['area'],','))}
	areaInstance.init({"province":"{$area[0]}","city":"{$area[1]}","area":"{$area[2]}"});
	{else:}
	areaInstance.init();
	{/if}
});

</script>