<div id="pageInfo" data-title="申请提现"></div>

<div id="main" class="person_mian">
    <div class="user_info">
        <form name="withdraw" action="{url:/ucenter/withdraw_act}" method="POST" class="form-inline form" role="form">
            <div class="tixan">
                <div class="psd_li">
                    <div style="text-align: center;margin: 10px auto;">帐户余额：<font class="red">￥{$this->memberRow['balance']}</font></div>
                </div>
                <div class="psd_li">
                    <span>收款人姓名</span>
                    <input type="text" name='name' placeholder="收款人姓名" pattern='required' initmsg="" alt="">
                </div>  
                <div class="psd_li">
                    <span>提现金额</span>
                    <input type="text" name='amount' class="input_text" placeholder="提现金额" pattern='^[0-9]*$' initmsg="" alt="">
                </div>  
                <div class="psd_li">
                    <span>备注信息</span>
                    <input type="text" name='note' class="input_text" placeholder="备注信息" pattern='required' initmsg="" alt="">
                </div>  
            </div>
            <input type="hidden" name="redirect" value="account_log" />
            <button class="submitBtn" type="submit">确定</button>
        </form>
    </div>      
</div>


<script>
$(function(){
    $(".nav_user").addClass('cur');
    // 原有JS
    var formObj = new Form('withdraw');
    formObj.init({
        'name':'{$this->withdrawRow['name']}',
        'note':'{$this->withdrawRow['note']}',
        'amount':'{$this->withdrawRow['amount']}'
    });
})
</script>

