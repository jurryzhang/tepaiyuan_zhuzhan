<div id="pageInfo" data-title="限时抢购"></div>

<div id="main">			
	<div class="ban cyqd_ban">
		{echo:Ad::show("限时抢购页推荐100%*79(mobile)")}
	</div>			
	<div class="foodBox">
		<div class="dw cyqd_dw">
			<a href="javascript:">
				<i class="icon iconfont icon-dingwei"></i>
				<span>{$this->dingwei}</span>
			</a>
			<button onclick="refurl();"><i class="icon iconfont icon-iconfont31shuaxin"></i></button>	
		</div>
<!-- 		<div class="foodTitle">
			<ul>
				<li class="curLi">新鲜蔬菜</li>
				<li>调料副食</li>
				<li>其他</li>
			</ul>
		</div> -->
		<div class="foodText">
			<ul>
				{set:$countNumItems = array();}
				{foreach:items=$this->regiment_list}
				{set:$countNumItems[] = $item['p_id'];}
				<li>
					<div class="foodPic">
						<a href="{url:/site/products/promo/time/id/$item[goods_id]/active_id/$item[p_id]}"><img src="{url:/pic/thumb/img/$item[img]}"></a>
					</div>
					<div class="foodJg">
						<a href="{url:/site/products/promo/time/id/$item[goods_id]/active_id/$item[p_id]}">
							<h1>{$item['title']}</h1>
							<h2>
								<span>￥{$item['award_value']}{if:$item['unit']}/{$item['unit']}{/if}</span> 
								<del>￥{$item['sell_price']}</del>
							</h2>
						</a>
						{set:$free_time=strtotime($item['end_time'])-ITime::getNow();}
						<div class="xsqgsj countdown">
							<i class="icon-time"></i>
							<em id="cd_hour_{$item['p_id']}">{echo:floor($free_time/3600);}</em><span>小时</span>
							<em id="cd_minute_{$item['p_id']}">{echo:floor( ($free_time%3600)/60 );}</em><span>分钟</span>
							<em id="cd_second_{$item['p_id']}">{echo:$free_time%60}</em><span>秒</span>
						</div>
					</div>
					<button style="display:none;" onclick="joinCart_list({$item['goods_id']});"><i class="icon iconfont icon-jiarugouwuche"></i></button>
                    <div class="clear"></div>
				</li>
				{/foreach}

			</ul>
		</div>
		


	</div>
</div>






<script>
$(function(){
    //倒计时
	var cd_timer = new countdown();
	{foreach:items = $countNumItems}
		cd_timer.add({$item});
	{/foreach}
});
</script>